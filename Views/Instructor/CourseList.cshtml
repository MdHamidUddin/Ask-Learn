@*@model List<AskNLearn.Models.Instructor.CourseModel>*@

@{
    ViewBag.Title = "CourseList";
    Layout = "~/Views/Shared/InstructorDashboard.cshtml";
}

<div id="wrapper">

    <div id="page-wrapper">
        <h2>CourseList</h2>
        <div class="container-fluid">
            <h2>Posted Courses</h2>

            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th><center>Course ID</center></th>
                        <th><center>Course Title</center></th>
                        <th><center>Price(৳)</center></th>
                        <th><center>Upvote</center></th>
                        <th><center>Downvote</center></th>
                        <th><center>Action</center></th>
                    </tr>
                </thead>

                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.coid</td>
                            <td>@item.title</td>
                            <td>@item.price ৳</td>
                            <td>@item.upVote</td>
                            <td>@item.downVote</td>
                            <td>
                                <a href="/Instructor/UpdateCourse/@item.coid"><img src="https://img.icons8.com/material-rounded/24/000000/edit--v1.png" /></a>&nbsp;
                                <a href="/Product/DeleteCourse/@item.coid"><img src="https://img.icons8.com/material-outlined/24/000000/filled-trash.png" /></a>&nbsp;&nbsp;
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
        </div>
</div>