                PostDetails[t] = PostDetails[t + 1];
                PostDetails[t + 1] = sd;
                string si = PostsUserImg[t];
                PostsUserImg[t] = PostsUserImg[t + 1];
                PostsUserImg[t + 1] = si;
                string dt = DateofPost[t];
                DateofPost[t] = DateofPost[t + 1];
                DateofPost[t + 1] = dt;
            }
        }
    }
