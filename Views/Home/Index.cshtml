    {
        UpName[r] = up.name;
        UType[r] = up.userType;
        PostTitle[r] = up.title;
        PostDetails[r] = up.details;
        Vote[r] = up.upVote - up.downVote;
        PostsUserImg[r] = up.proPic;
        DateofPost[r] = up.dateTime.ToString();
        r++;
    }
    for (int s = 0; s < UP; s++)
    {
        for (int t = 0; t < UP - s - 1; t++)
        {
            if (Vote[t] > Vote[t + 1])
            {
                int sv = Vote[t];
                Vote[t] = Vote[t + 1];
                Vote[t + 1] = sv;
                string sn = UpName[t];
                UpName[t] = UpName[t + 1];
                UpName[t + 1] = sn;
