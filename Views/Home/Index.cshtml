            name3 = u.name;
            email3 = u.email;
        }
        if (u.uid.Equals(ViewBag.L4))
        {
            name4 = u.name;
            email4 = u.email;
        }
        if (u.uid.Equals(ViewBag.L5))
        {
            name5 = u.name;
            email5 = u.email;
        }
    }
    foreach (var course in ViewBag.CourseList)
    {
        n++;
    }
    foreach (var course in ViewBag.UserList)
    {
        UL++;
    }
    foreach (var course in ViewBag.UserPostList)
    {
        UP++;
    }
    foreach (var course in ViewBag.CourseList)
    {
        
        {
            CourseId[p] = course.coid;
            CourseTitle[p] = course.title;
            CoursePrice[p] = course.price;
            Details[p] = course.details;
            ThumbnailList[p] = course.thumbnail;
        }
        p++;
    }
    foreach (var ui in ViewBag.UserList)
    {
        IName[q] = ui.name;
        EmailList[q] = ui.email;
        Img[q] = ui.proPic;
        UID[q] = ui.uid;
        q++;
    }
    iid1 = UID[0];
    iid2 = UID[1];
    iid3 = UID[2];
    iid4 = UID[3];
    iid5 = UID[4];
