@model AskNLearn.Models.Entity.ProfileUpdateModel
@{
    ViewBag.Title = "UserDetails";
    Layout = "~/Views/Shared/MyLayout3.cshtml";
    string msg = "checked";
}


<br />
<br />
<br />


<!-- Preloader -->
<div class="preloader">
    <div class="cssload-speeding-wheel"></div>
</div>
<div id="wrapper">

    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row bg-title">
                <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                    <h4 class="page-title">@Model.name</h4>
                </div>
                <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                    <ol class="breadcrumb">
                        @*<li><a href="#">Dashboard</a></li>*@
                        <li class="active">@Model.name Details</li>
                    </ol>
                </div>
            </div>
            <!-- /.row -->
            <!-- .row -->
            <div class="row">
                <div class="col-md-4 col-xs-12">
                    <div class="white-box">
                        <div class="user-bg">
                            <img width="100%" alt="user" src="../../Theme/plugins/images/large/img1.jpg">
                            <div class="overlay-box">
                                <div class="user-content">
                                    <a href="javascript:void(0)">
                                        <img src="@Model.proPic"
                                             class="thumb-lg img-circle" alt="img">
                                    </a>
                                    <h4 class="text-white">@Model.username</h4>
                                    <h5 class="text-white">@Model.email</h5>
                                </div>
                            </div>
                        </div>
                       
                    </div>
                </div>

                <div class="col-md-8 col-xs-12">
                    <div class="white-box">

                        <form class="form-horizontal form-material">

                            <input type="hidden" class="form-control" name="uid" placeholder="Full Name" value="@Model.uid">
                            <div class="form-group">
                                <label class="col-md-12">Full Name</label>
                                <div class="col-md-12">
                                    <input type="hidden" name="uid" value="@Model.uid">
                                    <input type="text" class="form-control" name="name" placeholder="Full Name" value="@Model.name" style="font-size:15px" readonly>
                                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="form-group">
                                <label class="col-md-12">Username</label>
                                <div class="col-md-12">
                                    <input type="text" class="form-control" name="username" placeholder="username" value=@Model.username style="font-size:15px" readonly>
                                    @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                                </div>

                            </div>

                            <div class="form-group">
                                <label class="col-md-12">Account Type</label>
                                <div class="col-md-12">
                                    <input type="text" class="form-control" name="userType" placeholder="UserType" value=@Model.userType style="font-size:15px" readonly>
                                    @Html.ValidationMessageFor(model => model.userType, "", new { @class = "text-danger" })
                                </div>

                            </div>

                            <div class="form-group">
                                <label class="col-md-12">User Reputation</label>
                                <div class="col-md-12">
                                    <input type="text" class="form-control" name="Reputation" placeholder="Reputation" value=@Model.reputation style="font-size:15px" readonly>
                                    @Html.ValidationMessageFor(model => model.reputation, "", new { @class = "text-danger" })
                                </div>

                            </div>


                            <div class="form-group">
                                <label for="example-email" class="col-md-12">Email</label>
                                <div class="col-md-12">
                                    <input type="email" value=@Model.email
                                           class="form-control form-control-line" name="email"
                                           id="example-email" style="font-size:15px" readonly>
                                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-12">Password</label>
                                <div class="col-md-8">
                                    <span>
                                        <input type="password" name="password" id="showPass" value=@Model.password class="form-control form-control-line" style="font-size:15px" readonly>
                                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                    </span>

                                </div>


                            </div>


                            @{ System.TimeSpan diff = DateTime.Now.Date.Subtract(Model.dob);
                                int age = (int)diff.Days;
                                age = age / 365;

                            }
                            <div class="form-group">
                                <label class="col-md-12">Age</label>
                                <div class="col-md-12" style="font-size:15px">
                                    @age Years
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-12">DOB</label>
                                <div class="col-md-12">
                                    <input type="date" name="dob" value="@Model.dob.ToString("yyyy-MM-dd")"
                                           class="form-control form-control-line" style="font-size:15px" readonly>
                                    @Html.ValidationMessageFor(model => model.dob, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-12">Gender</label>
                                <div class="col-md-12" style="font-size:15px" >
                                            @Model.gender
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-12">
                                    @*<a href="@Url.Action("DeleteUser",new { @Model.uid})" class="btn btn-danger" style="background-color:red;color:white;border-radius:6px">Delete</a>*@
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
        <footer class="footer text-center">
            2020 &copy; Pixel Admin brought to you by <a href="https://www.wrappixel.com/">wrappixel.com</a>
        </footer>
    </div>
    <!-- /#page-wrapper -->
</div>
<!-- /#wrapper -->
